{
    "name": "surfnet/stepup-api",
    "type": "project",
    "license": "Apache-2.0",
    "description": "The SURF Step-up API exposes a way to retrieve Step-up Tokens.",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "6.3.*",
        "symfony/dotenv": "6.3.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.3.*",
        "symfony/runtime": "6.3.*",
        "symfony/yaml": "6.3.*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "overtrue/phplint": "^5.1",
        "phpmd/phpmd": "^2.12",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.2",
        "phpstan/phpstan-symfony": "^1.1",
        "phpunit/phpunit": "^9.5",
        "qossmic/deptrac-shim": "^0.20.0",
        "sebastian/phpcpd": "^6.0",
        "symfony/browser-kit": "6.0.*",
        "symfony/css-selector": "6.0.*",
        "symfony/phpunit-bridge": "^6.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src/Surfnet"
        },
        "classmap": [
            "src/Surfnet/StepupApi/Kernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check": [
            "@phplint",
            "@phpcs",
            "@phpcpd",
            "@phpmd",
            "@phpstan",
            "@deptrac",
            "@test",
            "@security"
        ],
        "phplint": "./tools/qa/phplint",
        "phpcs": "./tools/qa/phpcs",
        "phpcbf": "./tools/qa/phpcbf",
        "phpmd": "./tools/qa/phpmd",
        "phpstan": "./tools/qa/phpstan",
        "deptrac": "./tools/qa/deptrac",
        "phpcpd": "./tools/qa/phpcpd",
        "test": "./tools/qa/phpunit",
        "security": "./tools/qa/security"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.3.*"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/public",
            "!/src",
            "!/var/cache/prod",
            "!/vendor"
        ]
    }
}
